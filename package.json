{
  "name": "electron-playground",
  "description": "simple electron app for playground",
  "version": "1.0.0-beta.4",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "satoshicano",
    "email": "satoshicano@gmail.com"
  },
  "main": "app/main.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "compile": "electron-webpack",
    "dev": "electron-webpack dev",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "release": "yarn compile && build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "electron-log": "^2.2.9",
    "electron-updater": "^2.21.4",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "source-map-support": "^0.5.0"
  },
  "devDependencies": {
    "@types/debug": "^0.0.30",
    "@types/node": "^9.3.0",
    "@types/react": "^16.0.34",
    "@types/react-dom": "^16.0.3",
    "babel-preset-react": "^6.24.1",
    "electron": "^1.7.10",
    "electron-builder": "^20.8.2",
    "electron-load-devtool": "^1.0.0",
    "electron-webpack": "^1.11.0",
    "electron-webpack-ts": "^1.2.0",
    "rimraf": "^2.6.2",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.6.0",
    "tslint-react": "^3.4.0",
    "typescript": "^2.6.2",
    "webpack": "^3.10.0"
  },
  "resolutions": {
    "webpack-sources": "1.0.1"
  },
  "build": {
    "appId": "com.github.satoshicano.electron-playground",
    "productName": "electron-playground",
    "mac": {
      "category": "your.app.category.type"
    },
    "win": {
      "target": "nsis"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "satoshicano",
        "repo": "electron-playground"
      }
    ]
  }
}
